<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#fff5f5f5" android:endColor="#ffc0c0c0" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@android:color/holo_blue_light" android:endColor="@android:color/holo_blue_light" android:angle="270.0" />
        </shape>
    </item>
</selector>